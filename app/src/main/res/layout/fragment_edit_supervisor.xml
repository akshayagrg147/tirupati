<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_below="@+id/appbar_first"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lltitle"
            android:layout_marginVertical="@dimen/_5sdp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/text_Box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeErrorColor="@color/brightRed"
                app:counterMaxLength="50"
                app:endIconCheckable="true"
                app:errorEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/colorPrimaryVariant">

                <EditText
                    android:id="@+id/etVendor"
                    style="@style/et_login_signup"
                    android:hint="Vendor"

                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="text"
                    android:maxLength="50"
                    android:outlineAmbientShadowColor="@color/blue_light" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/text_Box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeErrorColor="@color/brightRed"
                app:counterMaxLength="50"
                app:endIconCheckable="true"
                app:errorEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/colorPrimaryVariant">

                <EditText
                    android:id="@+id/etGateNumber"
                    style="@style/et_login_signup"
                    android:hint="Gate Entry Number"
                    android:focusable="false"
                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="text"
                    android:maxLength="50"
                    android:outlineAmbientShadowColor="@color/blue_light" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/text_Box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeErrorColor="@color/brightRed"
                app:counterMaxLength="50"
                app:endIconCheckable="true"
                app:errorEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/colorPrimaryVariant">

                <EditText
                    style="@style/et_login_signup"
                    android:hint="Gross Weight"
                    android:id="@+id/etGross"
                    android:focusable="false"

                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="text"
                    android:maxLength="50"
                    android:outlineAmbientShadowColor="@color/blue_light" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/text_Box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeErrorColor="@color/brightRed"
                app:counterMaxLength="50"
                app:endIconCheckable="true"
                app:errorEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/colorPrimaryVariant">

                <EditText
                    style="@style/et_login_signup"
                    android:hint="Tare Weight"
                    android:id="@+id/etTare"
                    android:focusable="false"
                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="text"
                    android:maxLength="50"
                    android:outlineAmbientShadowColor="@color/blue_light" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/text_Box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeErrorColor="@color/brightRed"
                app:counterMaxLength="50"
                app:endIconCheckable="true"
                app:errorEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintTextColor="@color/colorPrimaryVariant">

                <EditText
                    style="@style/et_login_signup"
                    android:hint="Net Weight"
                    android:id="@+id/etNet"
                    android:focusable="false"
                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="number"
                    android:maxLength="50"
                    android:outlineAmbientShadowColor="@color/blue_light" />

            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/btnContinueEdit"
            style="@style/loginButton"
            android:layout_marginVertical="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:background="@drawable/square_filled_black"
            android:fontFamily="@font/monsrt_bold"
            android:text="Continue"
            android:textColor="@color/white" />

    </LinearLayout>
</RelativeLayout>