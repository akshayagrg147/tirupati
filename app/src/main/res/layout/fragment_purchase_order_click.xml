<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Pending Status and Date -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/status_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/pending" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/status_icon"

                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/blue_00A0FA"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Pending"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/status_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="01-01-2024"
                    android:textSize="10sp" />
            </LinearLayout>




        </RelativeLayout>

        <!-- Purchase Order Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/F7F7F7_white"
            android:paddingVertical="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/po_number_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PO Number"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="14sp"

                />

            <TextView
                android:id="@+id/po_number_value"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:text="PO0092"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_10sdp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/vendor_label"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="Vendor"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="14sp"
                android:layout_weight="1"
                
                 />
            <TextView
                android:id="@+id/vendor_value"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:text="Steven Roddy"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingVertical="@dimen/_10sdp"
            android:background="@color/F7F7F7_white"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/org_name_label"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="Name of Organisation"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="14sp"
                android:layout_weight="1"
                
                 />
            <TextView
                android:id="@+id/org_name_value"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:text="Shri Tirupati Enterprises"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_10sdp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/montserrat_medium"
                android:textSize="14sp"
                android:text="Item"
                android:layout_weight="1"
                
                 />
            <TextView
                android:id="@+id/item_value"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:text="Copper Rod"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/F7F7F7_white"
            android:paddingVertical="@dimen/_10sdp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/uom_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UoM"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="14sp"
                android:layout_weight="1"
                
                 />
            <TextView
                android:id="@+id/uom_value"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:text="kilogram"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_10sdp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/hsn_sac_code_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HSN/SAC Code"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="14sp"
                android:layout_weight="1"
                
                 />
            <TextView
                android:id="@+id/hsn_sac_code_value"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum"
              />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/F7F7F7_white"
            android:paddingVertical="@dimen/_10sdp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/quantity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="14sp"
                android:layout_weight="1"
                
                 />
            <TextView
                android:id="@+id/quantity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"
                android:text="56 kg"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_10sdp"
            android:background="@color/white"

            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/rate_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="14sp"
                android:layout_weight="1"
                
                 />
            <TextView
                android:id="@+id/rate_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"
                android:text="₹80/kg"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_10sdp"
            android:background="@color/F7F7F7_white"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/amount_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="14sp"
                android:layout_weight="1"
                
                 />
            <TextView
                android:id="@+id/amount_value"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_height="wrap_content"
                android:text="₹980000"
             />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_10sdp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/payment_terms_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Terms"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="14sp"
                android:layout_weight="1"
                
                 />
            <TextView
                android:id="@+id/payment_terms_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Lorem ipsum"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_10sdp"
            android:background="@color/F7F7F7_white"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/delivery_terms_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="14sp"
                android:text="Delivery Terms"
                android:layout_weight="1"
                
                 />
            <TextView
                android:id="@+id/delivery_terms_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Lorem ipsum"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="@dimen/_10sdp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/remarks_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/montserrat_medium"
                android:textSize="14sp"
                android:text="Remarks"
                android:layout_weight="1"
                
                 />
            <TextView
                android:id="@+id/remarks_value"
                android:layout_width="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum passages, and more recently with desktop publishing software."
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
