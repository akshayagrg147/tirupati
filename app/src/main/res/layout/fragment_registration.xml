<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/layer"
        android:background="@drawable/rounded_corners"
        android:layout_height="wrap_content"
        >
    <androidx.cardview.widget.CardView
    android:layout_centerInParent="true"
    android:layout_width="@dimen/_220sdp"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_12sdp"
    >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:id="@+id/cardlayer"
            android:layout_height="@dimen/_180sdp"
            android:paddingHorizontal="@dimen/_22sdp"
            android:scaleType="centerInside"
            android:paddingStart="@dimen/_22sdp"
            android:paddingEnd="@dimen/_24sdp"
            android:background="@color/black"
            android:src="@drawable/app_logo_name"/>

</androidx.cardview.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/lltitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_8sdp"
            android:background="@color/white"
            android:layout_marginVertical="@dimen/_4sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/welcometitle"
                android:layout_width="match_parent"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="@dimen/_16ssp"
                android:text="Sign up to Continue"
                android:textColor="#815343"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="@dimen/_11ssp"
                android:layout_marginTop="@dimen/_13sdp"
                android:text="To sign up only one owner details are required. If you have multiple owners, please enable the &quot;Multiple owners&quot; button and provide all subsequent owner detail in the form."
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lltitle"
            android:background="@color/white"
           >
        <LinearLayout
            android:layout_below="@+id/lltitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtUserGST"
            style="@style/text_Box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            app:boxStrokeErrorColor="@color/brightRed"
            app:counterMaxLength="50"
            app:endIconCheckable="true"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
            app:errorEnabled="true"
                app:hintAnimationEnabled="true">

            <EditText
                android:id="@+id/etNameOrg"
                style="@style/et_login_signup"
                android:hint="Name of Organisation"
                android:importantForAutofill="noExcludeDescendants"
                android:inputType="textPersonName"
                android:maxLength="50"

                android:outlineAmbientShadowColor="@color/blue_light" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/text_Box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                app:boxStrokeErrorColor="@color/brightRed"
                app:counterMaxLength="50"
                app:endIconCheckable="true"
                app:errorEnabled="true"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:hintAnimationEnabled="true">

                <EditText
                    android:id="@+id/etContactNumber"
                    style="@style/et_login_signup"
                    android:hint="Organisation's Contact Number"
                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:outlineAmbientShadowColor="@color/blue_light" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/text_Box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                app:boxStrokeErrorColor="@color/brightRed"
                app:counterMaxLength="50"
                app:endIconCheckable="true"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:errorEnabled="true"
                app:hintAnimationEnabled="true">

                <EditText
                    android:id="@+id/etOrgEmailNumber"
                    style="@style/et_login_signup"
                    android:hint="Organisation's Email ID"
                    android:importantForAutofill="noExcludeDescendants"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:outlineAmbientShadowColor="@color/blue_light" />

            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/btnRegister"
                    style="@style/loginButton"
                    android:layout_marginTop="@dimen/_180sdp"
                    android:layout_marginVertical="@dimen/_20sdp"
                    android:background="@drawable/square_filled_black"
                    android:fontFamily="@font/monsrt_bold"
                    android:text="Continue"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/signup_reg"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:lineSpacingMultiplier="1.2"
                    android:textAllCaps="false"
                    android:text="@string/login_text" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"/>


            </LinearLayout>

        </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </RelativeLayout>

</RelativeLayout>

